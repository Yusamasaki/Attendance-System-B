<% provide(:class_text, 'notice-overwork-request-C') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <% @users.each do |user| %>
    <% @atten = Attendance.where(user_id: user.id) %>
    <% @atten.each do |at| %>
      <% if at.instructor_confirmation == '3' && at.instructor_confirmation_app.nil? %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h1 class="modal-title">【 <%= user.name %>からの残業申請 】</h1><br>
          <%= form_with(model: @user, url: attendances_update_notice_overwork_request_user_path, local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-overwork">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>指定勤務終了時間</th>
                  <th>時間外時間</th>
                  <th>業務処理内容</th>
                  <th>支持者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              
              <tbody>
                <% @attendances = Attendance.where(user_id: user.id) %>
                <% @attendances.each do |day| %>
                <% if day.instructor_confirmation == '3' && day.instructor_confirmation_app.nil? %>
                <%= f.fields_for "attendances[]", day do |attendance| %>
                  <tr>
                    <td><%= l(day.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                    <td><%= format_basic_info(day.expected_end_time) if day.expected_end_time.present? %></td>
                    <td><%= format_basic_info(day.designated_work_end_time) %></td>
                    <td>
                      <%= after_hours(day.designated_work_end_time, day.expected_end_time) %>
                    </td> 
                    <td><%= day.business_processing_contents %></td>
                    <td>
                      <%= attendance.select :instructor_confirmation_app, 
                        [
                        ["", ''],
                        ["申請中", '1'],
                        ["承認", '2'],
                        ["否認", '3']
                        ]
                       %> 
                    </td>
                    <td><%= attendance.check_box :next_day %></td>
                    <td><%= link_to "確認", user_path(@user), class: "btn btn-primary" %></td>
                  </tr>
                <% end %>
              <% end %>
              <% end %>
              </tbody>
            </table>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
              キャンセル
              </button>
            </div>
          <% end %>
          </div>
          <% break %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>