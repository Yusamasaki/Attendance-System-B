<% provide(:title, @user.name) %>

<%= form_with(model: @user, url: attendances_update_one_month_user_path, local: true, method: :patch) do |f| %>
<div>
  <h1>勤怠編集画面</h1>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>変更前出勤時間</th>
        <th>変更前退勤時間</th>
        <th>変更後出勤時間</th>
        <th>変更後退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>支持者確認㊞</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <%= f.fields_for "attendances[]", day do |attendance| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <% if Date.current < day.worked_on %>
            <td>
              <%= day.started_at.hour if day.started_at.present? %>
              <%= ":" if day.started_at.present? %>
              <%= day.started_at.floor_to(15.minutes).min if day.started_at.present? %>
            </td>
            <td>
              <%= day.finished_at.hour if day.finished_at.present? %>
              <%= ":" if day.finished_at.present? %>
              <%= day.finished_at.floor_to(15.minutes).min if day.finished_at.present? %>
            </td>
            <td><%= attendance.time_field :started_at_before, readonly: true, class: "form-control" %></td>
            <td><%= attendance.time_field :finished_at_before, readonly: true, class: "form-control" %></td>
          <% else %>
            <td>
              <% if day.started_at_before.present? && day.notice_one_month_instructor_confirmation == '1' %>
                <%= day.started_at_before.hour if day.started_at_before.present? %>
                <%= ":" if day.started_at_before.present? %>
                <%= day.started_at_before.floor_to(15.minutes).min if day.started_at_before.present? %>
              <% else %>
                <%= day.started_at.hour if day.started_at.present? %>
                <%= ":" if day.started_at.present? %>
                <%= day.started_at.floor_to(15.minutes).min if day.started_at.present? %>
              <% end %>
            </td>
            <td>
              <% if day.finished_at_before.present? && day.notice_one_month_instructor_confirmation == '1' %>
                <%= day.finished_at_before.hour if day.finished_at_before.present? %>
                <%= ":" if day.finished_at_before.present? %>
                <%= day.finished_at_before.floor_to(15.minutes).min if day.finished_at_before.present? %>
              <% else %>
                <%= day.finished_at.hour if day.finished_at.present? %>
                <%= ":" if day.finished_at.present? %>
                <%= day.finished_at.floor_to(15.minutes).min if day.finished_at.present? %>
              <% end %>
            </td>
            <td><%= attendance.time_field :started_at_before, class: "form-control" %></td>
            <td><%= attendance.time_field :finished_at_before, class: "form-control" %></td>
          <% end %>
            <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= working_times(day.started_at, day.finished_at) %>
            <% end %>
          </td>
          <td><%= attendance.text_field :note, class: "form-control" %></td>
          <td>
            <% if @user.superiorA? %>
              <%= attendance.select :one_month_instructor_confirmation, 
                {"上長B": 2, "上長C": 3}, { include_blank: ''}
              %>
            <% elsif @user.superiorB? %>
              <%= attendance.select :one_month_instructor_confirmation, 
                {"上長A": 1, "上長C": 3}, { include_blank: ''}
              %>
            <% elsif @user.superiorC? %>
              <%= attendance.select :one_month_instructor_confirmation, 
                {"上長A": 1, "上長B": 2}, { include_blank: ''}
              %>
            <% elsif @user.superiorC? && day.change_digest == '1' %>
              <%= attendance.select :change_digest, 
                {"上長A": 0, "上長B": 0}, { include_blank: ''}
              %>
            <% else %>
              <%= attendance.select :one_month_instructor_confirmation, 
                {"上長A": 1, "上長B": 2, "上長C": 3}, { include_blank: ''}
              %>
            <% end %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="center">
  <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-default" %>
  <%= f.submit "編集を保存する", class: "btn btn-lg btn-default" %>
</div>
<% end %>