

<h1>拠点情報一覧</h1>


<table class="table table-bordered table-condensed table-hover text-center table-striped" id="index_attendance">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>拠点番号</th>
      <th>拠点名</th>
      <th>勤怠情報</th>
    </tr>
  </thead>
    
  <tbody>
    <% @bases.each do |base| %>
    <tr>
      <td>
        <%= link_to "修正",edit_basis_path(base.id), remote: true, class: "btn btn-primary" %>
      </td>
      <td>
        <%= link_to "削除", destroy_path(id: base.id), method: :delete,
        data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %>
      </td>
      <td><%= base.basenumber %></td>
      <td><%= base.basename %></td>
      <td><%= base.baseinfo %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "拠点情報追加", new_path, remote: true, class: "btn btn-primary" %>

<!--モーダルウインドウ表示-->
<div id="edit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
