<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <% @users.each do |user| %>
    <% @atten = Attendance.where(user_id: user.id) %>
    <% @atten.each do |at| %>
    <% if at.approval_application == '2' %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h1   class="modal-title">【 <%= user.name %> からの1ヶ月分勤怠申請 】</h1><br>
        <%= form_with(model: user, url: attendances_update_notice_approval_application_user_path, local: true, method: :patch) do |f| %>
        <table class="table table-bordered table-overwork">
          <thead>
            <tr>
              <th>月</th>
              <th>指示者確認㊞</th>
              <th>変更</th>
              <th>勤怠を確認する</th>
            </tr> 
          </thead>
          
          <tbody>
            <% @attendances = Attendance.where(user_id: user.id) %>
            <% @attendances.each do |day| %>
            <% if day.approval_application.present? %>
            <tr>
              <td><%= l(day.worked_on, format: :super_short) %></td>
              <td>
                <%= f.select :approval_confirmation, 
                [
                ["", ""],
                ["申請中", 0],
                ["承認", 1],
                ["否認", 2]
                ] 
                %>
              </td>
              <td><%= f.check_box :change_digest, {:checked => false}, checked_value = "0", unchecked_value = "1" %></td>
              <td><%= link_to "確認", user_path(user), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
        <div class="center">
          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
      <% end %>
    <% end %>
    <% end %>
  </div>
</div>