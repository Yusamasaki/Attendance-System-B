・<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【<%= @user.name %>からの1ヶ月分勤怠申請】</h1>
    </div>
    <div class="modal-body">
      <%= form_with(model: @attendance, url: update_approval_application_user_path, local: true, method: :patch) do |f| %>
      <table class="table table-bordered table-overwork">
        <thead>
          <tr>
            <th>月</th>
            <th>指示者確認㊞</th>
            <th>変更</th>
            <th>勤怠を確認する</th>
          </tr> 
        </thead>
        
        <tbody>
          <tr>
            <td><%= l(@attendance.worked_on, format: :short) %></td>
            <td>
              <%= f.select :instructor_confirmation, 
              [
              ["申請中", 0],
              ["承認", 1],
              ["否認", 2]
              ] 
              %>
            </td>
            <td><%= f.check_box :change_digest %></td>
            <td><%= link_to "確認", "#", class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    <div class="center">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
      <% end %>
  </div>
</div>