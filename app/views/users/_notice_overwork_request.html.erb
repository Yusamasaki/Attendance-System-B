<% provide(:class_text, 'notice-overwork-request') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【<%= @user.name %>からの残業申請】</h1>
    </div>
    <div class="modal-body">
      <%= form_with(model: @attendance, url: update_notice_overwork_request_user_path, local: true, method: :patch) do |f| %>
      <table class="table table-bordered table-overwork">
        <thead>
          <tr>
            <th>日付</th>
            <th>曜日</th>
            <th>終了予定時間</th>
            <th>指定勤務終了時間</th>
            <th>時間外時間</th>
            <th>業務処理内容</th>
            <th>支持者確認㊞</th>
            <th>変更</th>
            <th>勤怠を確認する</th>
          </tr>
        </thead>
        
        <tbody>
          <tr>
            <td><%= l(@day.worked_on, format: :short) %></td>
            <td><%= $days_of_the_week[@day.worked_on.wday] %></td>
            <td><%= format_basic_info(@user.expected_end_time) %></td>
            <td><%= format_basic_info(@user.designated_work_end_time) %></td>
            <td></td> 
            <td></td>
            <td></td>
            <td><%= f.check_box :next_day %></td>
            <td><%= link_to "確認", current_user, class: "btn btn-primary" %></td>
          </tr>
          
        </tbody>
      </table>
      <div class="center">
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
        <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
        キャンセル
        </button>
      </div>
      <% end %>
  </div>
</div>