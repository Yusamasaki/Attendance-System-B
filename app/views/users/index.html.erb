<% provide(:title, 'User <all></all>') %>

<h1>ユーザ一覧</h1>


<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

<table class="table table-condensed table-hover btn-group-vertical" id="table-users">
  <thead>
    <% @users.each do |user| %>
      <tr>
        <% if current_user.admin? && !current_user?(user) %>
        <td><%= user.name%></br>
        <% end %>
          <%= link_to "削除", user, method: :delete,
            data: { confirm: "削除してよろしいですか？" },
            class: "btn btn-primary" %></br>
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse<%= user.id %>"><button type="submit" class="btn btn-lg btn-primary">編集</button></a>
                  </h4>
                  <div>
                    <div id="collapse<%= user.id %>" class="panel-collapse collapse">
                      <ul class="list-group">
                        <% render "user" %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </td>
      </tr>
    <% end %>
  </thead>
</table>
      
